<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.UpsertTourModalController"
      prefHeight="400.0" prefWidth="600.0"
      spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 20;">

    <Label text="Name"/>
    <TextField fx:id="tourNameTextField"/>

    <Label text="Description"/>
    <TextField fx:id="tourDescriptionField"/>

    <Label text="From"/>
    <TextField fx:id="tourFromField"/>

    <Label text="To"/>
    <TextField fx:id="toField"/>

    <Label text="Transport Type"/>
    <TextField fx:id="tourTransportField"/>

    <Label text="Distance (km)"/>
    <TextField fx:id="tourDistanceField"/>

    <Label text="Estimated Time (h)"/>
    <TextField fx:id="tourTimeField"/>

    <Button text="Save Tour" onMouseClicked="#onSaveTourButtonClicked"/>
    <ImageView fx:id="routeImageView" fitWidth="400" fitHeight="200"/>

</VBox>
